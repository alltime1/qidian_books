$headerColor = #000
.bookshelf
  width 100%
  height 100vh
  overflow hidden
header
  display flex
  height 50px
  justify-content space-between
  align-items center
  font-size: 18px
  padding 0 10px
  color: $headerColor 
  perspective: 100px
  .header_left
    width 20px
    height 20px
  .header-search
    flex: 1
    height 34px
    background-color #fff
    border-radius: 6px
  img 
    margin: 0 10px
  .background
    background: url("../../assets/IMG_20220201_154900.jpg") no-repeat
    background-size: cover;
    width 100vw;
    height 150px;
    
    transform: translateZ(0)
    transform-origin:70% 50%
  .hidden
    overflow hidden
    width 100%
    position: absolute;
    left 0
    top 0
    z-index -10
.booklist
  position: absolute
  cursor pointer
  left 0
  top 80px
  transition: top .3s
  height: calc(100vh - 127px);
  overflow-y: auto;
  .start
    display flex
    align-items center
    p
      color: #fff
    .tip
      position relative
      margin: 0 10px
      p
        position absolute
        left 50%
        top 50%
        transform: translate(-50%,-50%)
        color #fff
  .book_shelf_list
    width 100vw
    background-color #fff
    padding 20px 26px 0 20px
    box-sizing: border-box
    border-radius: 16px
    margin-top 10px

.loading_anima
    position: absolute;
    z-index: 100;
    top: 68px;
    left: 50%;
    transform: translateX(-50%)
    display flex
    flex-direction: column
    align-items center
    p
      color: #ffffff
      font-size: 12px
      white-space nowrap
      text-align: center
.find_more
  color: red
  text-align center
  margin 20px
  p
    margin: auto
    padding: 4px 12px
    border: 1px solid red
    width fit-content
    border-radius: 24px
    font-size: 14px




