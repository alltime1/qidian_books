.back
  background: linear-gradient(rgb(255, 238, 238),rgb(241, 241, 241)) 
  height 100vh
  overflow-y auto
.switch
  display flex
  align-items center
  justify-content space-between
  padding 20px 10px
  img 
    width 20px
    height 20px
  .choosed
      position: relative
      font-size: 18px
      letter-spacing: 1.4
      &::after
        content: ""
        width 60%

        height 6px
        position absolute
        left 20%
        bottom 0px
        background linear-gradient(90deg,red,rgb(253, 201, 201))
        opacity .8
.classify
  display flex
  align-items center
  justify-content space-between
  margin 8px 10px
  background-color #fff
  border-radius: 8px
  padding: 8px
  div
    display flex
    flex-direction: column
    align-items center
    font-size: 14px

    img  
      width 11vw
      height 11vw
.choiceLists
  position relative
  &::after
    content: ""
    background:  linear-gradient(124deg,red,rgb(255, 216, 216))
    position: absolute
    left 0
    top 0
    width 100px
    height 20px
    opacity .5
    border-radius 0 0 30px 0
.choiceList
  background: #fff
  padding: 10px;
  margin 10px

  

  .header
    display flex
    justify-content space-between
    margin-bottom 6px
    p
      font-size: 20px
      span 
          margin-left: -5px;
          background: linear-gradient(124deg,rgb(255, 216, 216),red)
          color: transparent
          -webkit-background-clip: text;
    .more
      display flex
      font-size: 12px
      display flex
      align-items center
      padding 2px 12px
      border: 1px solid #dddddd
      border-radius: 20px

.tuijian 
  padding 8px 18px
  border-radius: 5px
  margin-bottom 300px
  position relative
  width 100%
  box-sizing: border-box
  .message
    position absolute
    opacity 0
    width 100%
    top 0
    left 0
    img 
      position: absolute
      right 0
      bottom 20px
      height 120px
      opacity 0.4
      object-fit: contain
    .iconlist
      display flex
      align-items center
      img 
        position: inherit
        width 10%
        object-fit: contain
        opacity 0.4
        margin-right 6px
    p
      font-size: 16px
      color: red
      width 100%
      overflow: hidden
      text-overflow: ellipsis
      -webkit-box-orient vertical
      -webkit-line-clamp 2
      display: -webkit-box;
      margin-bottom 8px
      transform: translateX(14px)
      opacity 0
      .say
        font-size: 13px
        opacity .5
    .line
      display flex
      transform: translateX(14px)
      opacity 0
      p
        width auto
        opacity .5
        font-size: 12px
      span 
        opacity 1
        font-size: 12px
        margin-left 8px
        color: red
  .messageAnima
    opacity 1
    p,.line
    
      transform: translateX(0px)
      transition: all .6s
      opacity 1
    img 
      opacity 1
      transition: opacity .3s
      animation delayHidden .3s
      animation-delay: 1.2s
    .iconlist
      img 
        opacity 1
        transition: opacity .3s
@keyframes delayHidden{
 100%{
    opacity .3
    
   }  
}